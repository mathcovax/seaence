generator client {
    provider = "prisma-client-js"
    output   = "../../../node_modules/@prisma/output"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

enum provider {
    pubmed
    pedro
    sciencedirect
}

enum articleType {
    metaAnalysis
    randomizedControlledTrial
}

enum searchResultStatus {
    find
    selectedToBeSent
    failedToSend
}

model searchResult {
    reference String
    provider  provider
    status    searchResultStatus @default(find)
    createdAt DateTime           @default(now())

    @@id([reference, provider], name: "id")
}

enum missionStatus {
    created
    inProgress
    failed
    success
}

model SearchResultPubMedMissionStep {
    mission   SearchResultPubMedMission @relation(fields: [missionId], references: [id])
    missionId String                    @id
    date      DateTime
    page      Int
}

model SearchResultPubMedMission {
    id                            String                          @id
    articleType                   articleType
    searchDateFrom                DateTime
    searchDateTo                  DateTime
    status                        missionStatus
    SearchResultPubMedMissionStep SearchResultPubMedMissionStep[]
}

model ResultDetailsSendSearchResultMission {
    mission   SendSearchResultMission @relation(fields: [missionId], references: [id])
    missionId String                  @id
    success   Int
    failed    Int
}

model SendSearchResultMission {
    id            String                                @id
    quantity      Int
    status        missionStatus
    resultDetails ResultDetailsSendSearchResultMission?
}
