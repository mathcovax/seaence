{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"moduleDetection": "force",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": [
			"node"
		],
		"noEmit": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@vendors/*": [
				"./vendors/*"
			],
			"@business/*": [
				"./business/*"
			],
			"@interfaces/*": [
				"./interfaces/*"
			],
		}
	},
	"include": [
		"**/*.ts",
		"eslint.config.ts"
	],
	"exclude": [
		"vendors/**/*.test.ts",
	]
}