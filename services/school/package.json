  },
  "dependencies": {
    "@duplojs/core": "1.0.3",
    "@duplojs/node": "1.0.1",
    "dotenv": "16.4.5",
    "dotenv-expand": "12.0.1",
    "mongodb": "^6.15.0",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@duplojs/types-codegen": "1.0.1",
    "@types/node": "22.13.10",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  }
}
