generator client {
    provider = "prisma-client-js"
    output   = "../../../node_modules/@prisma/output"
}

generator json {
    provider = "prisma-json-types-generator"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_DATABASE_URL")
}

enum UserLanguage {
    fr_FR
    en_US
}

model User {
    id         String       @id @unique
    username   String
    email      String
    banned     Boolean
    warnings   Warning[]
    language   UserLanguage
    lastUpdate DateTime     @default(now())
    deleteId   String?
}

model Warning {
    id          String  @id
    makeUserBan Boolean
    reason      String
    userId      String
    User        User    @relation(fields: [userId], references: [id])
    /// [WarningReference]
    reference   Json
}
